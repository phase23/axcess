<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Notes">






    <LinearLayout android:id="@+id/orderwrapper"

        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">



        <LinearLayout android:id="@+id/LinearLayout02"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">



            <Button
                android:id="@+id/backbtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"

                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                android:visibility="visible"
                android:width="100dp"
                android:gravity="center"
                android:text="Map"
                android:textColor="#020202"
                app:backgroundTint="#FFFFFF" />


            <Button
                android:id="@+id/rvieworders"


                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="false"
                android:layout_gravity="center"
                android:layout_marginLeft="95dp"
                android:gravity="center"


                android:text="Orders"
                android:textSize="20dp"

                tools:layout_editor_absoluteX="112dp"
                tools:layout_editor_absoluteY="112dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/notesstuff"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/calldirect"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                android:visibility="visible"
                android:width="100dp"
                android:gravity="center"
                android:text="Call Direct"
                android:layout_marginTop="25dp"
                android:textColor="#020202"
                app:backgroundTint="#FFFFFF" />

            <Button
                android:id="@+id/callwhatapp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                android:visibility="visible"
                android:width="100dp"
                android:gravity="center"
                android:layout_marginTop="25dp"
                android:text="Call Whatsapp"
                android:textColor="#020202"
                app:backgroundTint="#FFFFFF" />

            <Button
                android:id="@+id/callskype"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="25dp"
                android:width="100dp"
                android:gravity="center"
                android:text="Call Skype"
                android:textColor="#020202"
                android:visibility="visible"
                app:backgroundTint="#FFFFFF" />


            <Button
                android:id="@+id/updatecustomer"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="25dp"
                android:width="100dp"
                android:drawableLeft="@drawable/ic_baseline_location_on_24"
                android:gravity="center"
                android:text="Update customer Address"
                android:textColor="#FFFFFF"
                android:visibility="visible"
                app:backgroundTint="#509303" />


            <TextView
                android:id="@+id/isphone"


                android:layout_width="234dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="false"
                android:layout_gravity="left"
                android:gravity="left"
                android:paddingTop="15dp"
                android:paddingRight="25dp"
                android:paddingLeft="25dp"
                android:layout_marginTop="45dp"
                android:text="phone.."
                android:textSize="20dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="112dp"
                tools:layout_editor_absoluteY="112dp" />


            <TextView
                android:id="@+id/notesplace"


                android:layout_width="234dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="false"
                android:layout_gravity="left"
                android:gravity="left"
                android:paddingTop="15dp"
                android:paddingRight="25dp"
                android:paddingLeft="25dp"
                android:layout_marginTop="15dp"
                android:text="notes.."
                android:textSize="20dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="112dp"
                tools:layout_editor_absoluteY="112dp" />


        </LinearLayout>



    </LinearLayout>

</ScrollView>